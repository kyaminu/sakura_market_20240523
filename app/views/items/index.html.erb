<div class="mx-3">
  <h1 class="fs-2"><%= title '商品一覧' %></h1>

  <% if @items.present? %>
    <div class="container">
      <div class="row row-cols-6 g-4 m-5">
        <% @items.each do |item| %>
          <div class="card m-2">
            <%= link_to item_path(item), class: 'item-link' do %>
              <%= image_tag item.image.variant(:thumb), class: "card-img-top mt-3" %>
              <div class="card-body">
                <div class="card-title">
                  <%= item.name %>
                </div>
                <div class="card-text text-truncate">
                  <%= item.description %>
                </div>
              </div>
            <% end %>

            <div class="text-end mb-2">
              <div class="mb-1"><%= number_to_currency(item.included_tax_price) %></div>
              <%= button_to 'カートに追加', '#', method: :post, class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    商品は準備中です
  <% end %>
</div>
