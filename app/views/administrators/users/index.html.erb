<div class="mx-3">
  <h1 class="fs-2"><%= title 'ユーザ一覧' %></h1>

  <table class="table custom-table">
    <thead>
    <tr>
      <th class="col-4">名前</th>
      <th class="col-4">メールアドレス</th>
      <th class="col-4"></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td class="text-center">
          <%= link_to '編集', edit_administrators_user_path(user), class: 'btn btn-success' %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
