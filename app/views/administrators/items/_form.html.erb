<%= simple_form_for item, url: url do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text, input_html: { rows: 5 } %>
  <%= f.input :image, as: :file, required: item.new_record? %>
  <div class="my-3">
    <%= image_tag(item.image.variant(:full)) if item.persisted? && item.image.present? %>
  </div>
  <%= f.input :price_excluding_tax %>
  <%= f.input :published, as: :boolean %>

  <%= f.button :submit, class: 'btn btn-primary'%>
<% end %>
