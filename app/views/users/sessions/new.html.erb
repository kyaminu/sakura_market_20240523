<div class="text-center mb-3">
  <h1 class="fs-2"><%= title 'Log in' %></h1>
</div>
<div class="d-flex justify-content-center">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions d-flex justify-content-between">
      <%= f.button :submit, "Log in", class: 'btn btn-dark me-5' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: 'btn btn-outline-success' %>
    </div>
    <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: 'btn btn-outline-danger mt-3 ms-1' %>
  <% end %>
</div>
