<div class="container">
  <h1 class="fs-2 mb-5">
    <%= title "#{l @purchase.created_at}購入分 注文詳細" %>
  </h1>

  <div class="row justify-content-md-around">
    <div class="d-flex flex-column col-md-6">
      <div class="mb-3">
        <div class="fs-4">送付先住所</div>
        <%= @purchase.name %>
        <%= @purchase.address %>
      </div>

      <% @purchase.purchase_items.each do |purchase_item| %>
        <div class="mb-3">
          <%= link_to item_path(purchase_item.item_id), class: 'purchase_show-link' do %>
            <div class="card">
              <div class="card-body">
                <%= image_tag purchase_item.item_image.variant(:thumb) %>
                <div class="mt-3">
                  <div class="fs-4 mb-2">
                    <%= purchase_item.item_name %>
                    <%= number_to_currency(purchase_item.price_included_tax) %>
                  </div>
                  <div class="card-text text-truncate mb-3">
                    <%= purchase_item.item_description %>
                  </div>
                </div>

                <div class="d-flex justify-content-end">
                  <div class="p-2"><%= purchase_item.quantity %></div>
                  <div class="p-2">個</div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="col-md-4">
      <div class="d-flex flex-column">
        <div class="col-md-7">
          <div class="fw-bold fs-3 d-flex mb-3">
            <div class="text-start">小計</div>
            <div class="ms-auto"><%= number_to_currency(@purchase.purchase_item_subtotal) %></div>
          </div>
          <div class="fw-bold fs-3 d-flex mb-3">
            <div class="text-start">配送料</div>
            <div class="ms-auto"><%= number_to_currency @purchase.delivery_fee_value(@purchase.purchase_items.count) %></div>
          </div>
          <div class="fw-bold fs-3 d-flex mb-3">
            <div class="text-start">手数料</div>
            <div class="ms-auto"><%= number_to_currency @purchase.handling_fee_value(@purchase.purchase_item_subtotal) %></div>
          </div>
          <div class="fw-bold fs-3 d-flex mb-3">
            <div class="text-start">合計(税込)</div>
            <div class="ms-auto">
              <%= number_to_currency(
                @purchase.total_value(
                  @purchase.purchase_item_subtotal,
                  @purchase.delivery_fee_value(@purchase.purchase_items.count),
                  @purchase.handling_fee_value(@purchase.purchase_item_subtotal)
                )
              ) %>
            </div>
          </div>
          <div class="text-end">
            <%= link_to '戻る', users_purchases_path, class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
