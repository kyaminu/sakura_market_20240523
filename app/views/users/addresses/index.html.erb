<div class="container">
  <h1 class="fs-2"><%= title '住所リスト' %></h1>

  <div class="d-flex flex-row-reverse me-5 mb-3">
    <%= link_to '住所の登録', new_users_address_path, class: 'btn btn-primary' %>
  </div>

  <div class="d-flex flex-column">
    <% @addresses.each do |address| %>
      <div class="mb-3">
        <div class="card">
          <div class="card-body">
            <p>
              <%= address.name_kanji %>
              (<%= address.name_kana %>)
            </p>
            <div>
              〒<%= address.postal_code %>
              <br>
              <%= address.prefecture.name %>
              <%= address.city %>
              <%= address.street %>
            </div>
            <div class="d-flex justify-content-end">
              <%= link_to '編集', edit_users_address_path(address), class: 'btn btn-success me-2' %>
              <%= button_to '削除', users_address_path(address), method: :delete, data: { turbo_confirm: '本当に削除します。よろしいですか？' }, class: 'btn btn-danger' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
