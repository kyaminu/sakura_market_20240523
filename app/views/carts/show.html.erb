<div class="container">
  <h1 class="fs-2"><%= title 'カート' %></h1>

  <% if @cart_items.present? %>
    <div class="row justify-content-md-around">
      <div class="d-flex flex-column col-md-6">
        <% @cart_items.each do |cart_item| %>
          <div class="mb-3">
            <div class="card">
              <div class="card-body">
                <%= link_to item_path(cart_item.item), class: 'cart_item-link' do %>
                  <%= image_tag(cart_item.item.image.variant(:full)) %>
                  <div>
                    <p>
                      <%= cart_item.item.name %>
                      <%= number_to_currency(cart_item.item.price_included_tax) %>
                    </p>
                  </div>
                  <%= cart_item.item.description %>
                <% end %>

                <div class="d-flex justify-content-end">
                  <%= simple_form_for cart_item, url: cart_item_path(cart_item) do |f| %>
                    <div class="d-flex">
                      <div class="p-2">個数</div>
                      <%= f.input :quantity, label: false, as: :select, collection: 1..30 %>
                      <%= f.submit '更新する' %>
                    </div>
                  <% end %>
                </div>

                <div class="d-flex justify-content-end">
                  <%= button_to '削除', cart_item_path(cart_item), method: :delete, data: { turbo_confirm: 'カートから削除します。よろしいですか？' }, class: 'btn btn-small btn-danger' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="col-md-4">
        <div class="d-flex flex-column">
          <div class="col-md">
            <div class="fw-bold fs-3 d-flex mb-3">
              <div class="text-start">小計</div>
              <div class="ms-auto"><%= number_to_currency(@cart.subtotal) %></div>
            </div>
            <div class="d-flex justify-content-md-around">
              <%= link_to 'レジに進む', '#', class: 'btn btn-primary me-2' %>
              <%= link_to 'お買い物を続ける', root_path, class: 'btn btn-outline-dark' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
    現在カートに商品はありません
  <% end %>
</div>
